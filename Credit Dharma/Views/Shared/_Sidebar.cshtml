@using Credit_Dharma.Helper; 
 <!-- ======= Sidebar ======= -->
<aside id="sidebar" class="sidebar">

    <ul class="sidebar-nav" id="sidebar-nav">

        <li class="nav-item">
            <a class="nav-link collapse" asp-controller="Home" asp-action="Index">
                <i class="bi bi-grid"></i>
                <span>Dashboard</span>
            </a>
        </li><!-- End Dashboard Nav -->




        @{

            if (Session.Admin)
            {


                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Usuarios" asp-action="Index">
                        <i class="bi bi-dash-circle"></i>
                        <span>Admnistrar Usuarios</span>
                    </a>
                </li>
            }
        }

        @{
            if (!Session.Loggedin)
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Usuarios" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Iniciar Sesion</span>
                    </a>
                </li><!-- End Login Page Nav -->
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link collapsed" asp-controller="Usuarios" asp-action="Signout">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>Cerrar Sesion</span>
                    </a>
                </li>
            }
        }

    </ul>

</aside><!-- End Sidebar-->