@model IEnumerable<Credit_Dharma.Models.Registro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Agregar Registro de Comunicacion</a>
</p>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <table class="datatable table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.NotificationDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserAccountNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NotificationDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserAccountNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>

                                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.IdNotification">Ver</a> 

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>